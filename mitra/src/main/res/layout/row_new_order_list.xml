<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/selectableItemBackground"
        app:contentPadding="8dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivIconStatus"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvAddress"
                android:layout_centerVertical="true"
                android:background="#38000000"
                android:tint="#ffffff"
                app:srcCompat="@drawable/ic_fiber_new_black_24dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Address"
                android:textColor="@color/cardTextColor"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_below="@id/tvAddress"
                android:layout_toRightOf="@id/ivIconStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/cardTextColor"
                />
            <TextView
                android:id="@+id/tvHandledBy"
                android:layout_below="@id/tvCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technician"
                android:textColor="@color/cardTextColor"
                />

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_below="@id/ivIconStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Status"
                android:textColor="@color/cardTextColor"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>